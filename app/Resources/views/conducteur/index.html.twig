{% extends "/layout.html.twig" %}

{% block body %}
    <h1>Conducteurs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Typevoiture</th>
                <th>Nbplaces</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conducteur in conducteurs %}
            <tr>
                <td><a href="{{ path('conducteur_show', { 'id': conducteur.id }) }}">{{ conducteur.id }}</a></td>
                <td>{{ conducteur.typevoiture }}</td>
                <td>{{ conducteur.nbplaces }}</td>
                <td>{% if conducteur.date %}{{ conducteur.date|date('Y-m-d') }}{% endif %}</td>
                <td>{% if conducteur.heure %}{{ conducteur.heure|date('H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('conducteur_show', { 'id': conducteur.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('conducteur_edit', { 'id': conducteur.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('conducteur_new') }}">Create a new conducteur</a>
        </li>
    </ul>
{% endblock %}
