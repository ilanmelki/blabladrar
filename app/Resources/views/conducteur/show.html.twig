{% extends "/layout.html.twig" %}

{% block body %}
    <h1>Récapitulatif</h1>

    <div class="container mx-auto bg-dark mt-5 shadow p-3 mb-5 bg-white rounded">

    <table>
        <tbody>

            <tr>
                <th>Prénom</th>
                <td>{{ conducteur.author.firstname }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ conducteur.id }}</td>
            </tr>
            <tr>
                <th>Type de Voiture</th>
                <td>{{ conducteur.typevoiture }}</td>
            </tr>
            <tr>
                <th>Nbplaces</th>
                <td>{{ conducteur.nbplaces }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if conducteur.date %}{{ conducteur.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Heure de départ</th>
                <td>{% if conducteur.heure %}{{ conducteur.heure|date('H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('conducteur_eventconducteur',{'id': conducteur.author.id }) }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('conducteur_edit', { 'id': conducteur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
